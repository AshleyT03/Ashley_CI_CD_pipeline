name: CI/CD Pipeline

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: windows-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Setup MSBuild
        uses: microsoft/setup-msbuild@v1
        with:
          msbuild-version: 'latest'

      - name: Build application
        run: msbuild ./ComicWebsite/ComicWebsite.sln /p:Configuration=Release

  test:
    needs: build
    runs-on: windows-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Setup MSBuild
        uses: microsoft/setup-msbuild@v1
        with:
          msbuild-version: 'latest'

      - name: Build application
        run: msbuild ./ComicWebsite/ComicWebsite.sln /p:Configuration=Release

      - name: Run tests (replace with actual test commands)
        run: echo "Running tests..."

  deploy:
    needs: test
    runs-on: windows-latest

    steps:
        - name: Checkout code
        uses: actions/checkout@v2

        - name: Deploy to staging (replace with actual deployment steps)
        run: echo "Deploying to staging..."
        # Replace the above line with your actual deployment commands

        - name: Notify Slack on failure
        if: failure()
        uses: rtCamp/action-slack-notify@v2
        with:
            status: 'failure'
            message: 'Deployment to staging failed'
            channel: '<your_slack_channel>'
            webhook: ${{ secrets.SLACK_WEBHOOK_URL }}

